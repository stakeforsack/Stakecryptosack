generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ✅ Cloud-safe provider
  url      = env("DATABASE_URL") // ✅ Comes from your Vercel environment variable
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  vip       Int      @default(0)
  createdAt DateTime @default(now())
  transactions Transaction[]
}

model Transaction {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  coin      String
  amount    Float
  status    String
  meta      String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
